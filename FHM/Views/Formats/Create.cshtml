@model FHM.Models.FormatViewModels.FormatFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Format</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormatName" class="control-label"></label>
                <input asp-for="FormatName" class="form-control" />
                <span asp-validation-for="FormatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormatDescription" class="control-label"></label>
                <input asp-for="FormatDescription" class="form-control" />
                <span asp-validation-for="FormatDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormatLink" class="control-label"></label>
                <input asp-for="FormatLink" class="form-control" />
                <span asp-validation-for="FormatLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GameID)
                @Html.DropDownListFor(m => m.GameID, new SelectList(Model.Games, "GameID", "GameName"))
                @Html.ValidationMessageFor(m => m.GameID)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

