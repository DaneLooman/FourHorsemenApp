@model  Game
@{
    ViewData["Title"] = "AddGame";
}

<h2>Add New Game</h2>

<form asp-action="AddGame" method="post" class="form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="GameName" class="col-md-2 control-label">Game Name</label>
        <div class="col-md-5">
            <input asp-for="GameName" class="form-control" />
            <span asp-validation-for="GameName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="GameShortDescription" class="col-md-2 control-label">Short Desc.</label>
        <div class="col-md-5">
            <textarea asp-for="GameShortDescription" class="form-control"></textarea>
            <span asp-validation-for="GameShortDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="GameLongDescription" class="col-md-2 control-label">Long Desc.</label>
        <div class="col-md-5">
            <textarea asp-for="GameLongDescription" class="form-control"></textarea>
            <span asp-validation-for="GameLongDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="GameImageUrl" class="col-md-2 control-label">Game Image</label>
        <div class="col-md-5">
            <input asp-for="GameImageUrl" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="GameImageThumbnailURL" class="col-md-2 control-label">250x250Thumbnail</label>
        <div class="col-md-5">
            <input asp-for="GameImageThumbnailURL" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="GameIsGameOfTheWeek" class="col-md-2 control-label">Game of the Week?</label>
        <div class="col-md-5">
            <input type="checkbox" asp-for="GameIsGameOfTheWeek" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Create New Game" />
        </div>
    </div>


</form>

