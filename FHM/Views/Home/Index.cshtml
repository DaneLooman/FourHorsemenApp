@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>

    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/PlayersChampionship2019.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Test your mettle in our 2019 Magic The Gathering Players Championship.
                    <a class="btn btn-default" href="https://www.facebook.com/groups/team4hm/" target="_blank">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/RavnicaWeekend.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Come Celebrate Ravnica by competitng with other players for awesome prizes. 
                    <a class="btn btn-default" href="https://www.facebook.com/events/180875172861910/" target="_blank">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-5">
        <h2>Magic the Gathering</h2>
        <ul>
            <li>Register for upcoming <a href="https://www.facebook.com/groups/team4hm/" >Magic Events</a></li>
            <li>Join our Magic <a href="https://www.facebook.com/groups/team4hm/" target="_blank">Facebook Group</a></li>
            <li>Learn about Magic <a href="https://www.facebook.com/groups/team4hm/">Formats</a></li>
        </ul>
    </div>
    <div class="col-md-5">
        <h2>Pokemon The Trading Card Game</h2>
        <ul>
            <li>Register for upcoming <a href="https://www.facebook.com/groups/HorsemenOfMorgantown/">Pokemon Events</a></li>
            <li>Join our Pokemon <a href="https://www.facebook.com/groups/HorsemenOfMorgantown/" target="_blank">Facebook Group</a></li>
            <li>Learn about Pokemon <a href="https://www.facebook.com/groups/HorsemenOfMorgantown/">Formats</a></li>
        </ul>
    </div>
</div>
