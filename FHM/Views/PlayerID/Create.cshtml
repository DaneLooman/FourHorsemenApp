@model FHM.Models.PlayerIdViewModels.PlayerIdViewModel
@{
    ViewData["Title"] = "Create";
}

<section class="container">
<h2>Create</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerGameID" class="control-label"></label>
                <input asp-for="PlayerGameID" class="form-control" />
                <span asp-validation-for="PlayerGameID" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GameID)
                @Html.DropDownListFor(m => m.GameID, new SelectList(Model.Games, "GameID", "GameName"))
                @Html.ValidationMessageFor(m => m.GameID)
            </div>
                <input type="hidden" asp-for="UserID" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
</section>