@model IEnumerable<FHM.Models.PlayerIDModel.PlayerID>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                Game
            </th>
            <th>
                PlayerID
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game.GameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayerGameID)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PlayerIDID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PlayerIDID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PlayerIDID">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
