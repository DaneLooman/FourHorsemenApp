@model TournamentViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Tournament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TournamentName" class="control-label"></label>
                <input asp-for="TournamentName" class="form-control" />
                <span asp-validation-for="TournamentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentDescription" class="control-label"></label>
                <input asp-for="TournamentDescription" class="form-control" />
                <span asp-validation-for="TournamentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentFee" class="control-label"></label>
                <input asp-for="TournamentFee" class="form-control" />
                <span asp-validation-for="TournamentFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentStartTime" class="control-label"></label>
                <input type="datetime-local" asp-for="TournamentStartTime" class="form-control" />
                <span asp-validation-for="TournamentFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GameID)
                @Html.DropDownListFor(m => m.GameID, new SelectList(Model.Games, "GameID", "GameName"))
                @Html.ValidationMessageFor(m => m.GameID)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FormatID)
                @Html.DropDownListFor(m => m.FormatID, new SelectList(Model.Formats, "FormatID", "FormatName", "Game.GameName", "Game.GameName"))
                @Html.ValidationMessageFor(m => m.FormatID)
            </div>
            <div class="form-group">
                <label asp-for="IsMajorTournament" class="col-md-2 control-label">Major Event?</label>
                <div class="col-md-10">
                    <input type="checkbox" asp-for="IsMajorTournament" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
